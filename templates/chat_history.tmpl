{{define "main"}}
<div class="col">
    <h3><a href="/c/{{.Chat.ChatId}}">{{.Chat.ChatName}}</a></h3>
    {{$chatId := .Chat.ChatId}}
    <ul class="list-group list-group-flush">
        {{range .Messages}}
        <li class="list-group-item">
            <a href="/e/{{$chatId}}/{{.MessageId}}">{{.DateStr}}</a><br>
            <a href="/c/{{.SenderId}}">{{.SenderName}}</a>: {{.Content}}
            {{$l := .Attachments | len}}
            {{if gt $l 0}}
            {{range .Attachments}}
            <a href="/f/{{.Id}}"><img src="data:image/png;base64, {{.Thumb}}" alt=""/></a>
            {{end}}
            {{end}}
        </li>
        {{end}}
    </ul>
</div>
{{end}}